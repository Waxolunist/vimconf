if filereadable("/etc/vim/vimrc.local")
  source /etc/vim/vimrc.local
endif



function! InitSyntax()
	let parent = $HOME .'/.vim/' 
	let syntaxdir = parent . 'syntax/' 
	let syntaxfile = syntaxdir . 'css.vim'
	let syntaxfileorig = syntaxdir . 'unix/css.vim'

	if !filereadable(syntaxfile)
  	call rename(syntaxfileorig, syntaxfile) 
  endif
	
endfunction
call InitSyntax()

autocmd BufWritePost ~/.vim/doc/* :helptags ~/.vim/doc

" Change directory to the current file
" See http://vim.wikia.com/wiki/Set_working_directory_to_the_current_file
autocmd BufEnter * silent! lcd %:p:h

" set shell=/bin/bash\ --rcfile\ ~/.vim/.bashvimrc
